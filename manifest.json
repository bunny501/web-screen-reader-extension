{
  "manifest_version": 3,
  "name": "Web Screen Reader",
  "description": "A mini screen reader for websites: keyboard navigation + speech output.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Reader Controls"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": []
    }
  ]
}
